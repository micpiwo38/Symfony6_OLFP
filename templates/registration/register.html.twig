{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container w-50 p-3 mt-3 bg-primary text-white">
    <h2 class="text-success">INSCRIPTION</h2>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <fieldset>
                <legend>Mon identit√© :</legend>
                {{ form_row(registrationForm.lastname) }}
                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.email) }}
            </fieldset>
        </div>
        <div class="col-md-6 col-sm-12">
            <fieldset>
                <legend>Mon adresse</legend>
                {{ form_row(registrationForm.address) }}
                {{ form_row(registrationForm.zipcode) }}
                {{ form_row(registrationForm.city) }}
            </fieldset>
        </div>
    </div>
        
        
       
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}

        {{ form_row(registrationForm.RGPDconsent,{
            label: 'Accepter les termes RGPD'
        }) }}

        <button type="submit" class="btn btn-outline-success">Inscription</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
