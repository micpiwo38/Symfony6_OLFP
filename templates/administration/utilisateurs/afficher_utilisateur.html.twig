{% extends "base.html.twig" %}

{% block body %}
<table class="table table-hover table-striped">
    <thead>
      <tr class="table-primary">
        <th scope="col">ID</th>
        <th scope="col">Email</th>
        <th scope="col">Nom</th>
        <th scope="col">Prenom</th>
        <th scope="col">Adresse</th>
        <th scope="col">Code postale</th>
        <th scope="col">Ville</th>
        <th scope="col">Verifi√©</th>
        <th scope="col">Role</th>
      </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr class="">
            <th scope="row">{{user.id}}</th>
            <th scope="row">{{user.email}}</th>
            <th scope="row">{{user.lastname}}</th>
            <th scope="row">{{user.firstname}}</th>
            <th scope="row">{{user.address}}</th>
            <th scope="row">{{user.zipcode}}</th>
            <th scope="row">{{user.city}}</th>
            <th scope="row">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="{{user.id}}" {{user.isVerified ? 'checked' : ''}} disabled>
                    <label class="form-check-label" for="{{user.id}}"></label>
                  </div>
            </th>
            <th scope="row">
                {% for roles in user.roles %}
                    {% if roles == 'ROLE_USER' %}
                        {% set name = 'Utilisateur' %}
                        {% set color = 'success' %}
                    {% elseif roles == 'ROLE_PRODUCTS_ADMIN' %}
                        {% set name = 'Administrateur produit' %}
                        {% set color = 'warning' %}
                    {% else %}
                        {% set name = 'Adminsitrateur' %}
                        {% set color = 'danger' %}
                    {% endif %}
                    <span class="badge bg-{{color}}">{{name}}</span>
                {% endfor %}
            </th>
           
            
          </tr>
        {% endfor %}
     
 
   
    </tbody>
  </table>
{% endblock %}